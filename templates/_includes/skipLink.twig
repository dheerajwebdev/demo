<a class="skip-link" href="#main">Skip to main content</a>

{% css %}
  .skip-link {
    position: absolute;
    top: 8px;
    left: 8px;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    border: 0;
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    overflow: hidden;
    white-space: nowrap;
  }

  .skip-link:focus,
  .skip-link:active {
    display: block;
    z-index: 90;
    width: auto;
    height: auto;
    padding: 0.75em 1em;
    clip: unset;
    clip-path: none;
    background-color: #FEDB31;
    color: black;
    white-space: normal;
  }
{% endcss %}
