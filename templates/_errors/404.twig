{% extends '_layout' %}

{% import "_macros/image" as _image %}

{# Get 404 content #}
{% set entry = craft.entries.section('error').one() %}

{% block content %}
  <section class="container flex-1 text-white flex flex-col justify-center py-24 lg:py-32">
    <div class="layout-grid items-center gap-y-8">
      <div class="col-span-full lg:col-span-5 text-black">
        <h1 class="t-h1 mb-3">404</h1>
        <h2 class="t-h2 mb-3">{{ entry.heading }}</h2>
        <p>{{ entry.copy|nl2br }}</p>
      </div>
      <div class="col-span-full lg:col-span-6 lg:col-start-7">
        {{ _image.tag(
          entry.image.one() ?? null,
          null,
          { width: 548, height: 406, mode: 'crop' },
          "w-full"
        ) }}
      </div>
    </div>
</section>

{% endblock %}
