{% import "_macros/image" as _image %}

{% set copy = block.copy ?? '' %}
{% set image = block.image.one() ?? null %}

<section class="py-[50px] bg-white">
  <div class="container">
    <div class="pb-7 items-baseline">
      <div class="text-highlighted text-center p-5">
        <h2 class="col-span-4 lg:col-span-5 t-h2">
          {{ copy }}
        </h2>
      </div>
    </div>

    {% if image %}
      <div class="relative">
          <div class="w-full">
            {{ _image.tag( image, null,
              { width: 1400, mode: 'crop' },
              "w-full h-full" ) }}
          </div>
      </div>
    {% endif %}
  </div>
</section>
