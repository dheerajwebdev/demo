{% import "_macros/image" as _image %}

{# Required #}
{% set heading = block.heading %} {# Plain Text #}
{% set backgroundImage = block.backgroundImage.one() ?? null %} {# Asset #}

<section
  class="h-60 relative {{ backgroundImage ? 'parallax blue-overlay' : 'bg-blue-200' }}"
>
  <div class="bg absolute inset-0 h-60 w-full" style="z-index: -1;">
    {{ _image.tag( backgroundImage, null,
      { width: 1400, height: 300, mode: 'crop' },
        "w-full h-full object-cover" ) }}
  </div>
  <div class="content relative h-full w-full">
    <div class="container flex flex-col justify-center items-center h-full">
      <h1 class="t-h1 text-white text-center">{{ heading }}</h1>
    </div>
  </div>
</section>
