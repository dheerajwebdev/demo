{# Optional #}
{% set heading = block.heading ?? '' %} {# Plain Text #}
{% set copy = block.copy ?? '' %} {# Plain Text #}

<article class="border-t border-blue-200 flex flex-col items-center gap-2 pt-6">
  {% if heading %}
    <h3 class="t-h3 text-center">{{ heading }}</h3>
  {% endif %}

  {% if copy %}
    <div class="text-xl text-center">{{ copy|nl2br }}</div>
  {% endif %}
</article>
