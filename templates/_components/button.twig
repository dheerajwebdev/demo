{% set href = href ?? '' %}
{% set label = label ?? '' %}
{% set arrow = arrow ?? null %}
{% set color = color ?? 'black' %}
{% set newWindow = newWindow ?? false %}

{% set class = color == 'black' ? 'text-black border-black' : 'text-white border-white' %}
{% set chrevron = color == 'black' ? 'text-white fill-black' : 'text-black fill-white group-hover/btn:text-white' %}

{% if href %}
  <a href="{{ href }}"
    class="group/btn p-2 rounded-full inline-flex items-center gap-4 border {{ class }}"
    {% if newWindow %}target="_blank"rel="noopener noreferrer" title="{{ label }} (opens in new window)"{% endif %}
  >
    {% if arrow == 'left' %}
      {{ svg('static/img/icons/chevron-round.svg')|attr({ class:"w-[28px] rotate-180 group-hover/btn:fill-blue-500 transition-color #{chrevron}" }) }}
      <span class="pr-2.5 mb-0.5">{{ label }}</span>
    {% elseif arrow == 'right' %}
      <span class="pl-2.5 mb-0.5">{{ label }}</span>
      {{ svg('static/img/icons/chevron-round.svg')|attr({ class:"w-[28px] group-hover/btn:fill-blue-500 transition-color #{chrevron}" }) }}
    {% else %}
      {{ label }}
    {% endif %}
  </a>
{% endif %}
